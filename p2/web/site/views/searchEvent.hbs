<div class="row justify-content-center text-center">
    <h2>Search Event</h2>
    <div class="form-group justify-content-center col-5 mt-3">
        <form class="p-3" action="{{loggedBasePath}}/events/search" method="GET">
            <div class="input-group mb-3">
                <span class="input-group-text">Event</span>
                <input type="text" name="name" class="form-control" placeholder="Name" required/>
            </div>
            <div class="input-group mb-3">
                <span class="input-group-text">Page</span>
                <input type="text" name="page" class="form-control" placeholder="0"/>
                <span class="input-group-text">Limit</span>
                <input type="text" name="limit" class="form-control" placeholder="50"/>
            </div>
            <div class="input-group justify-content-center mb-3">
                <button type="submit" class="btn btn-primary mb-3">Search</button>
            </div>
        </form>
    </div>
</div>