<div class="card mb-3">
    <div class="row no-gutters">
        <div class="col-md-4">
            <img src="{{imageUrl}}" class="card-img" alt="poster">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><a href="/events/{{id}}" class="card-link">{{name}}</a></h5>
                <p class="card-text">{{date}}</p>
            </div>
        </div>
    </div>
</div>