<div class="card">
    <div class="card-body justify-content-around">
        <form method="POST" action="/groups/delete">
            <h2 class="card-title"><a href="/groups/{{id}}">{{name}}</a></h2>
            <h3 class="card-subtitle mb-2 text-body-secondary">{{description}}</h3>
            <a class="btn btn-primary" href="/groups/{{id}}">Edit</a>
            <input type="hidden" value="{{id}}" name="id">
            <button class="btn btn-danger" type="submit">Delete</button>
        </form>
    </div>
</div>