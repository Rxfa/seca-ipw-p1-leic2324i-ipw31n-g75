<div class="card mb-3 text-center">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="{{imageUrl}}" class="img-fluid card-img rounded" alt="...">
        </div>
        <div class="col-md-8">
            {{#if groupId}}
                <form method="post" action="site/groups/removeEvent">
                    <input type="hidden" name="groupId" value="{{groupId}}">
                    <input type="hidden" name="eventId" value="{{id}}">
                    <button
                            type="submit"
                            class="btn-close position-absolute top-0 end-0 m-2"
                            onclick="return confirm('Are you sure?')"
                    ></button>
                </form>
            {{/if}}
            <div class="card-body">
                <h5 class="card-title">{{name}}</h5>
                <p class="card-text">{{date}}</p>
                <p class="card-text">{{segment}}</p>
                <p class="card-text">{{genre}}</p>
                <p class="card-text">{{subGenre}}</p>
                <p class="card-text">Sales: {{sales.start}} - {{sales.end}}</p>
                <p class="card-text"><small class="text-body-secondary">{{id}}</small></p>
            </div>
        </div>
    </div>
</div>